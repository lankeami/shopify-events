{
  "manifest_version": 3,
  "name": "Shopify Admin Events Viewer",
  "version": "1.0.0",
  "description": "View recent events for Shopify admin pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://admin.shopify.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://admin.shopify.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js"],
      "matches": ["https://admin.shopify.com/*"]
    }
  ]
}
